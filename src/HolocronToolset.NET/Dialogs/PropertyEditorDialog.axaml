<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:widgets="clr-namespace:HolocronToolset.NET.Widgets.Edit;assembly=HolocronToolset.NET"
        x:Class="HolocronToolset.NET.Dialogs.PropertyEditorDialog"
        Title="Edit Property"
        Width="536" Height="318"
        MinWidth="400" MinHeight="300"
        WindowStartupLocation="CenterOwner">
    <Grid RowDefinitions="*,Auto" Margin="10">
        <Grid Grid.Row="0" ColumnDefinitions="3*,4*,4*">
            <!-- Left Column: Property Info -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Item Property:" Margin="0,0,0,5" />
                <TextBox Name="propertyEdit" IsReadOnly="True" Margin="0,0,0,10" />
                
                <TextBlock Text="Item Sub-Property:" Margin="0,0,0,5" />
                <TextBox Name="subpropertyEdit" IsReadOnly="True" Margin="0,0,0,10" />
                
                <TextBlock Text="Item Cost Parameter:" Margin="0,0,0,5" />
                <TextBox Name="costEdit" IsReadOnly="True" Margin="0,0,0,10" />
                
                <TextBlock Text="Parameter 1:" Margin="0,0,0,5" />
                <TextBox Name="parameterEdit" IsReadOnly="True" Margin="0,0,0,10" />
                
                <TextBlock Text="Upgrade Type:" Margin="0,0,0,5" />
                <widgets:ComboBox2DA Name="upgradeSelect" />
            </StackPanel>
            
            <!-- Middle Column: Cost Parameter Values -->
            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                <TextBlock Text="Cost Parameter Values:" Margin="0,0,0,5" />
                <ListBox Name="costList" Margin="0,0,0,10" />
                <Button Name="costSelectButton" Content="Select" />
            </StackPanel>
            
            <!-- Right Column: Parameter Values -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Parameter Values:" Margin="0,0,0,5" />
                <ListBox Name="parameterList" Margin="0,0,0,10" />
                <Button Name="parameterSelectButton" Content="Select" />
            </StackPanel>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="okButton" Content="OK" Width="75" Margin="0,0,10,0" />
            <Button Name="cancelButton" Content="Cancel" Width="75" />
        </StackPanel>
    </Grid>
</Window>

