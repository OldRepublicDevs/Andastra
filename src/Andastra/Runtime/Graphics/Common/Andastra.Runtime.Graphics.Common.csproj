<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>7.3</LangVersion>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>Andastra.Runtime.Graphics.Common</RootNamespace>
    <AssemblyName>Andastra.Runtime.Graphics.Common</AssemblyName>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <PropertyGroup>
    <Description>Shared graphics abstractions and base classes for Odyssey Engine backends (MonoGame, Stride, etc.)</Description>
    <Authors>th3w1zard1</Authors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2025.2.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\Andastra.Runtime.Core.csproj" />
    <ProjectReference Include="..\..\Content\Andastra.Runtime.Content.csproj" />
    <ProjectReference Include="..\..\..\Parsing\Andastra.Parsing.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="MonoGame\**" />
    <Compile Remove="Stride\**" />
    <None Remove="MonoGame\**" />
    <None Remove="Stride\**" />
  </ItemGroup>

</Project>
